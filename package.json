{
  "name": "nouveau",
  "version": "0.0.1-alpha.1",
  "license": "MIT",
  "author": "Eric Liu (https://github.com/metonym)",
  "description": "Minimal static site generator",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "build": "rm -rf lib && tsc -p ./config/tsconfig.prod.json",
    "lint": "tslint './src/**/*.ts'",
    "test": "node ./scripts/test.js",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "eval": "0.1.3",
    "fs-extra": "7.0.1",
    "html-minifier": "4.0.0",
    "live-server": "1.2.1",
    "rollup": "1.10.1",
    "rollup-plugin-md": "0.0.7",
    "rollup-plugin-node-resolve": "4.2.3",
    "rollup-plugin-svelte": "5.0.3",
    "rollup-plugin-terser": "4.0.4",
    "svelte": "3.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "5.0.5",
    "@types/html-minifier": "3.5.3",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.8",
    "husky": "2.1.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "pretty-quick": "1.10.0",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.5"
  },
  "bin": {
    "nouveau": "./cli.js"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/nouveau.git"
  },
  "homepage": "https://github.com/metonym/nouveau",
  "files": [
    "cli.js",
    "lib/"
  ]
}
